<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.subik.myshoppinglist.LargestDiscountActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <EditText
            android:id="@+id/edit_Budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/largest_discount_budget"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/largest_discount_button" />

    <LinearLayout
        android:id="@+id/linItemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listProductList"/>
    </LinearLayout>

</LinearLayout>
